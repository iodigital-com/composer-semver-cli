{
    "name": "iodigital-com/composer-semver-cli",
    "replace": {
        "isaac/composer-semver-cli": "*"
    },
    "description": "CLI wrapper for the composer/semver package",
    "keywords": ["composer", "semver", "cli", "console"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Aad Mathijssen",
            "email": "aad.mathijssen@iodigital.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "composer/semver": "^3.4",
        "symfony/console": "^6.4"
    },
    "require-dev": {
        "iodigital-com/php-code-sniffer-standard": "^29.3",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "ComposerSemverCli\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ComposerSemverCli\\": "tests",
            "Composer\\Semver\\": "vendor/composer/semver/tests"
        }
    },
    "bin": [
        "bin/composer-semver"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "preferred-install": {
            "composer/semver": "source"
        }
    }
}
